<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText pentru Nume complet -->
    <EditText
        android:id="@+id/fullNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F1F1F1"
        android:hint="Nume complet"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000000" />

    <!-- EditText pentru Adresă -->
    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F1F1F1"
        android:hint="Adresă"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000000" />

    <!-- Grupul de RadioButtons pentru Metoda de plată -->
    <RadioGroup
        android:id="@+id/paymentMethodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/paymentCardRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:text="Card"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/paymentCashRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Numerar"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Grupul de RadioButtons pentru Metoda de livrare -->
    <RadioGroup
        android:id="@+id/deliveryMethodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/deliveryCourierRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:text="Livrare prin curier"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/deliveryShowroomRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Ridicare din showroom"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Buton pentru trimiterea comenzii -->
    <Button
        android:id="@+id/submitOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:padding="16dp"
        android:text="Trimite comanda"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
